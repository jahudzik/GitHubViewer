<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

    <TextView
        android:id="@+id/specify_account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/specify_github_account_name"/>

    <EditText
        android:id="@+id/account_name_input"
        style="@android:style/Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/specify_account_name"
        android:maxLines="1"
        tools:text="jahudzik"/>

    <Button
        android:id="@+id/search_account_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/account_name_input"
        android:text="@string/search_account"/>

    <ProgressBar
        android:id="@+id/search_account_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>